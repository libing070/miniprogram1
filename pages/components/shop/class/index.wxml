<view class='class'>
  <!--垂直滚动，这里必须设置高度-->
  <view class='menulist'>
    <scroll-view scroll-y="true">
      <view class='item' wx:for="{{menulist}}" wx:for-item="data" wx:for-index="index">
        {{data.title}}
      </view>
    </scroll-view>
  </view>
  <view class='content'>
    <scroll-view scroll-y="true">
      <view>
        <image class="image" src='../../../src/img/shop/indexsanlan/sanlan1.png' style='width:100%;height:250rpx;'></image>
        <text style='font-size:28rpx;font-weight:700'>热门分类</text>
      </view>
      <view wx:for="{{100}}" wx:for-item="data" wx:for-index="index">{{data}}</view>
    </scroll-view>
  </view>
</view>