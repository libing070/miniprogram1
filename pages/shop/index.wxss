 .flex-main {
  bottom: 0; 
  left:0;
  right:0;
  position: fixed;
  font-size: 16rpx;
  display: flex;
  justify-content:center;
  background-color: antiquewhite;
}
.flex-main .item{
  height:100rpx;
  line-height:45rpx;
  width: 20%;
}
 .flex-main .item .iconfont,
.flex-main .item .text
{
  text-align: center;
  display: block;
}
.active{
  color:red;
  }

  .menu {
     display: flex;
     justify-content:center;
     margin: 5rpx;
  }
  .menu .item {
    height:100rpx;
    line-height:45rpx;
    width:20%;
    padding: 20rpx;
     text-align: center;
  }
 .menu .item .image{
      display: block;
    width:100%;
    height:100%;
  }
  
  .menu .item .text{
    display: block;
    font-size: 18rpx;
  }
