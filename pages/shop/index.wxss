.flex-main {
  bottom: 0;
  left: 0;
  right: 0;
  position: fixed;
  font-size: 16rpx;
  display: flex;
  justify-content: center;
  background-color: antiquewhite;
}

.flex-main .item {
  height: 100rpx;
  line-height: 45rpx;
  width: 20%;
}

.flex-main .item .iconfont, .flex-main .item .text {
  text-align: center;
  display: block;
}

.active {
  color: #f23030;
}

.menu {
  display: flex;
  justify-content: center;
  margin: 10rpx;
}

.menu .item {
  height: 100rpx;
  line-height: 45rpx;
  width: 20%;
  padding: 20rpx;
  text-align: center;
}

.menu .item .image {
  display: block;
  width: 100%;
  height: 100%;
}

.menu .item .text {
  display: block;
  font-size: 18rpx;
}

.sanlanimg {
  display: flex;
  justify-content: center;
  margin: 40rpx 0rpx 20rpx 0rpx;
}

.sanlanimg .item {
  height: 200rpx;
  padding: 0 5rpx;
}

.sanlanimg .item1 {
  width: 50%;
}

.sanlanimg .item2, .sanlanimg .item3 {
  width: 25%;
}

.sanlanimg .item .image {
  border-radius: 5rpx;
  display: block;
  width: 100%;
  height: 100%;
}

.scroll-x {
  display: flex;
  flex-direction: row;
}

.scroll-x .content {
  display: flex;
  align-items: center;
  width: 120rpx;
  height: 150rpx;
  padding: 0 5rpx;
}

.scroll-x .content .image {
  width: 100%;
  height: 100%;
}

.scroll-x .content2 .text{
  text-align: center;
   display: block;
}
.scroll-x .content2 .pp{
   font-size: 24rpx;
   font-weight: 700;
   color: #f23030;
}
.scroll-x .content2 .op{
 font-size: 20rpx;
}
.scroll-x .content2 .line{
  position: relative;
  text-align: center;
  top:-15rpx;
  left:45rpx;
  width: 55rpx;
  height: 2rpx;
  background-color: #686868;

}
